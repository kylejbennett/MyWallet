<h1>Sign Up</h1>

	<%= form_for User.new do |f| %>
		<%= f.label "email" %><br>
		<%= f.text_field :email %><br>
		<%= f.label "password" %><br>
		<%= f.password_field :password %><br>
		<%= f.label "phone" %><br>
		<%= f.text_field :phone %><br>
		<%= f.label "First Name" %><br>
		<%= f.text_field :fname %><br>
		<%= f.label "Last Name" %><br>
		<%= f.text_field :lname %><br>
		<%= f.label "Balance" %><br>
		<%= f.text_field :balance %><br>
		<%= f.submit :create %>
	<% end %>